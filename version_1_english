def kaantajat():
    print("")
    print("Translating")
    while True:
        print("(!) Go back")
        print("(1) Morse code")
        mitatehdaan = annaluku("What do we do? ", 1, 2)
        if mitatehdaan == 0:
            return
        elif mitatehdaan == 1:
            kaantajamorsekoodi()
#####
def kirjaimillaleikkimista():
    print("")
    print("Playing with words")
    print("")
    sana = str(input("Give me a word: "))
    if sana == "!":
        return
    while True:
        print("(!) Go back")
        print("(1) New word")
        print("(2) lenght")
        print("(3) Palindrome test")
        print("(4) Change letters")
        mitatehdaan = annaluku("What do we do? ", 1, 3) #4)
        if mitatehdaan == 0:
            return
        elif mitatehdaan == 1:
            sana = str(input("Give me a word. "))
        elif mitatehdaan == 2:
            sananpituudenlaskuri(sana)
        elif mitatehdaan == 3:
            palindromitesti(sana)
        elif mitatehdaan == 4:
            merkkienvaihto()
#####
def tekstipelit():
    print("")
    while True:
        print("Text-based games")
        print("(!) Go back")
        print("(1) Random number generator")
        print("(2) Try to guess the number")
        print("(3) The program tries to guess your number")
        print("(4) Rock paper scissors")
        mitatehdaan = annaluku("What do we do? ", 1, 5)
        if mitatehdaan == "!":
            return
        elif mitatehdaan == 1:
            numeronarvonta()
        elif mitatehdaan == 2:
            yritaarvatanumero()
        elif mitatehdaan == 3:
            yritetaanarvatanumero()
        elif mitatehdaan == 4:
            kivipaperisakset()
#####
def mitatehdaan():
    print("")
    while True:
        print("(!) Quit")
        print("(1) Text-based games")
        print("(2) Playing with words")
        print("(3) Translating")
        mitatehdaan = annaluku("Choose a category: ", 1, 3)
        if mitatehdaan == "!":
            return
        elif mitatehdaan == 1:
            tekstipelit()
        elif mitatehdaan == 2:
            kirjaimillaleikkimista()
        elif mitatehdaan == 3:
            kaantajat()
#####
def main():
    tiedot()
    try:
        mitatehdaan()
    except Exception:
        print("Error.")
        return
    print("The end.")
    return
main()
